        <Button x:Name="Reservations" Content="Reservations" HorizontalAlignment="Left" Margin="307,45,0,0" VerticalAlignment="Top" Width="128" Click="Reservations_Click" Height="70"/>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="95" Margin="5,30,0,0" VerticalAlignment="Top" Width="435"/>
        <Label x:Name="label" Content="Origin Hotel" HorizontalAlignment="Left" Margin="175,4,0,0" VerticalAlignment="Top" Width="88" FontWeight="Bold"/>
    </Grid>
</Window>
